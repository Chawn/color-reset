{
	"name": "Color Reset",
	"version": "1.0.0",
	"description": "Remove gray filter on web",
	"permissions": ["storage", "alarms"],
	"host_permissions": [
		"*://*/*"
	],
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": ["js/content.js"],
			"css": ["content.css"],
			"run_at": "document_start"
		}
	],
	"background": {
		"service_worker": "js/background.js",
		"persistant": false
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/logo.png",
			"32": "images/logo.png",
			"48": "images/logo.png",
			"128": "images/logo.png"
		}
	},
	"icons": {
		"16": "images/logo.png",
		"32": "images/logo.png",
		"48": "images/logo.png",
		"128": "images/logo.png"
	},
	"manifest_version": 3
}